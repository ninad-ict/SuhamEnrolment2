<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameDelivery"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/LinearLPreDelivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewHeadingDelivery"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20sp"
                android:gravity="center"
                android:text="Delivery Details"
                android:textColor="@color/skyblue"
                android:textSize="20sp" />

            <!--OUTCOME-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/textViewHeadingDelivery"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="3">

                <View
                    android:layout_width="100sp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="1"
                    android:background="@color/skyblue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingLeft="8sp"
                    android:paddingRight="8sp"
                    android:text="Outcome"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginRight="4sp"
                    android:layout_weight="2"
                    android:background="@color/skyblue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewHeadingDelivery"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="30sp"
                android:background="@drawable/topless_border"
                android:orientation="vertical">

                <!-- <TextView
                android:id="@+id/textviewNoDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10sp"
                android:text="@string/NoDeliveryMess"
                android:textColor="@color/skyblue"
                android:visibility="visible" />-->

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/TableOutcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:stretchColumns="*"
                    android:visibility="visible">

                    <TableRow
                        android:id="@+id/rowDelGravida"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginTop="30sp">

                        <TextView
                            android:id="@+id/textViewDelGravida"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="4"
                            android:text="Gravida:"
                            android:textColor="@color/skyblue"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/editTextDelGravida"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="10"
                            android:digits="0123456789"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="Total Count of Pregnancies"
                            android:inputType="number"
                            android:maxLength="2"
                            android:singleLine="true" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/rowDelCheckBoxText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <TextView
                            android:id="@+id/textViewDelOutcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="14"
                            android:text="Outcome of last Pregnancy:"
                            android:textColor="@color/skyblue"
                            android:textSize="20sp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/rowDelCheckBox1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkNormal"
                            android:layout_span="7"
                            android:text="Child Birth"
                            android:textColor="@color/skyblue" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkAbortion"
                            android:layout_span="7"
                            android:text="Abortion"
                            android:textColor="@color/skyblue" />
                    </TableRow>


                    <TableRow
                        android:id="@+id/rowDelCheckBox2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp">

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkMMR"
                            android:layout_span="7"
                            android:text="Mother Death"
                            android:textColor="@color/skyblue" />

                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/checkStill"
                            android:layout_span="7"
                            android:text="Still Birth"
                            android:textColor="@color/skyblue" />

                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <!--OUTCOME-->

            <!---DELIVERY DETAILS-->


            <LinearLayout
                android:id="@+id/LinearBirthBanner"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/LinearDelivery"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <View
                    android:layout_width="100sp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="1"
                    android:background="@color/skyblue" />

                <TextView
                    android:id="@+id/textviewBirthBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingLeft="8sp"
                    android:paddingRight="8sp"
                    android:text="Delivery Details"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginRight="4sp"
                    android:layout_weight="2"
                    android:background="@color/skyblue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearBirthDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LinearDelivery"
                android:layout_marginTop="10dp"
                android:background="@drawable/topless_border"
                android:orientation="vertical"
                android:visibility="gone">

                <!--  <TextView
                    android:id="@+id/textviewNoDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10sp"
                    android:padding="10sp"
                    android:text="@string/NoDeliveryMess"
                    android:textColor="@color/skyblue"
                    android:visibility="visible" />-->

                <TableRow
                    android:id="@+id/rowDelAbortion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/textViewDelAbortion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_span="8"
                        android:text="Month of Abortion:"
                        android:textColor="@color/skyblue"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/editTextDelAbortion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp"
                        android:layout_span="6"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="left"
                        android:hint="in Months."
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true" />

                </TableRow>

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/TableDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:visibility="gone">

                    <TableRow
                        android:id="@+id/rowDelPlace"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginTop="30sp">

                        <TextView
                            android:id="@+id/textViewDelPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_span="6"
                            android:text="Place of Delivery:"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />

                        <RadioGroup
                            android:id="@+id/radioGroupDelPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:layout_span="8"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/radioButtonHos"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:text="Hospital"
                                android:textColor="@color/skyblue" />

                            <RadioButton
                                android:id="@+id/radioButtonHome"
                                android:layout_width="100sp"
                                android:layout_height="match_parent"
                                android:baselineAligned="false"
                                android:text="Home"
                                android:textColor="@color/skyblue" />
                        </RadioGroup>
                    </TableRow>

                    <TableRow
                        android:id="@+id/rowDelStatus"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginTop="30sp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/textViewEDD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_span="6"
                            android:text="Delivery Status:"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />

                        <RadioGroup
                            android:id="@+id/radioGroupDelStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:layout_span="8"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/radioButtonNor"
                                android:layout_width="100sp"
                                android:layout_height="wrap_content"
                                android:text="Normal"
                                android:textColor="@color/skyblue" />

                            <RadioButton
                                android:id="@+id/radioButtonCaes"
                                android:layout_width="100sp"
                                android:layout_height="match_parent"
                                android:baselineAligned="false"
                                android:text="Caesarian"
                                android:textColor="@color/skyblue" />
                        </RadioGroup>

                    </TableRow>


                    <TableRow
                        android:id="@+id/rowDelCol"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:layout_marginTop="30sp">

                        <TextView
                            android:id="@+id/textViewDelCol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_span="6"
                            android:text="Colostrum Given?"
                            android:textColor="@color/skyblue"
                            android:textSize="20sp" />


                        <RadioGroup
                            android:id="@+id/radioGroupDelCol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:layout_span="8"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/radioButtonCol_Y"
                                android:layout_width="100sp"
                                android:layout_height="match_parent"
                                android:text="Yes"
                                android:textColor="@color/skyblue" />

                            <RadioButton
                                android:id="@+id/radioButtonCol_N"
                                android:layout_width="100sp"
                                android:layout_height="match_parent"
                                android:baselineAligned="false"
                                android:text="No"
                                android:textColor="@color/skyblue" />
                        </RadioGroup>

                    </TableRow>

                    <TableRow
                        android:id="@+id/rowDelDob"
                        android:layout_width="match_parent"
                        android:layout_height="100sp"
                        android:layout_marginTop="30sp"
                        android:layout_marginBottom="20sp">


                        <TextView
                            android:id="@+id/textViewDelDob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10sp"
                            android:layout_span="6"
                            android:text="Delivery Date"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />


                        <EditText
                            android:id="@+id/editTextDelDob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_span="8"
                            android:digits="1234567890-"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="DD/MM/YYYY"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <!---DELIVERY DETAILS-->


            <!--CHILD DETAILS-->


            <LinearLayout
                android:id="@+id/LinearChildBanner"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@id/LinearBirthDetails"
                android:layout_marginTop="15sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <View
                    android:layout_width="100sp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="4sp"
                    android:layout_weight="1"
                    android:background="@color/skyblue" />

                <TextView
                    android:id="@+id/textviewChildBanner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingLeft="8sp"
                    android:paddingRight="8sp"
                    android:text="Child Details"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginRight="4sp"
                    android:layout_weight="2"
                    android:background="@color/skyblue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearDelChildDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LinearBirthDetails"
                android:layout_marginTop="25sp"
                android:background="@drawable/topless_border"
                android:orientation="vertical"
                android:visibility="gone">

                <TableRow xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/rowAskTwins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textViewAskTwins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Is it Twins?"
                        android:textColor="@color/skyblue"
                        android:textSize="20sp" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/switchkids"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="10sp"
                        android:textOff="NO"
                        android:textOn="YES"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:thumb="@drawable/customswitchselector"
                        app:showText="true"
                        app:track="@drawable/custom_track" />

                </TableRow>

                <!---TABLE FOR SINGLE CHILD INPUT-->

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tableDelChildS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20sp"
                    android:stretchColumns="*"
                    android:visibility="visible">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewDelChildDetailsS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_span="3"
                            android:text="Enter Details:"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/textViewDelChildBWeightS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_span="3"
                            android:text="Birth Weight:"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/editTextDelChildBWeightS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="4"
                            android:digits="0123456789."
                            android:ems="10"
                            android:gravity="center"
                            android:hint="kgs."
                            android:inputType="number"
                            android:maxLength="6"
                            android:singleLine="true" />

                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/textViewDelChildSexS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginLeft="10dp"
                            android:layout_span="3"
                            android:text="Sex:"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />

                        <RadioGroup
                            android:id="@+id/radioGroupDelSexS"
                            android:layout_width="100sp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10sp"
                            android:layout_span="4"
                            android:orientation="horizontal">


                            <RadioButton
                                android:id="@+id/radioButtonMaleS"
                                android:layout_width="100sp"
                                android:layout_height="match_parent"
                                android:text="Male"
                                android:textColor="@color/skyblue" />

                            <RadioButton
                                android:id="@+id/radioButtonFemaleS"
                                android:layout_width="100sp"
                                android:layout_height="match_parent"
                                android:baselineAligned="false"
                                android:text="Female"
                                android:textColor="@color/skyblue" />
                        </RadioGroup>

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/textViewDelChildOrderS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_span="3"
                            android:text="Order of Birth"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/editTextDelChildOrderS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="4"
                            android:digits="0123456789"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="Enter Order"
                            android:inputType="number"
                            android:maxLength="2"
                            android:singleLine="true" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/textViewDelChildHeightS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_span="3"
                            android:text="Current Height"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/editTextDelChildheightS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="4"
                            android:digits="0123456789."
                            android:ems="10"
                            android:gravity="center"
                            android:hint="Cms."
                            android:inputType="number"
                            android:maxLength="6"
                            android:singleLine="true" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/textViewDelChildWeightNowS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_span="3"
                            android:text="Current Weight"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />


                        <EditText
                            android:id="@+id/editTextDelChildWeightNowS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="4"
                            android:digits="0123456789."
                            android:ems="10"
                            android:gravity="center"
                            android:hint="Kgs."
                            android:inputType="number"
                            android:maxLength="6"
                            android:singleLine="true" />

                    </TableRow>


                </TableLayout>

                <!---TABLE FOR SINGLE CHILD INPUTS-->

                <!---TABLE FOR TWIN INPUTS-->

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/tableDelChildDetailsTwins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="20sp"
                    android:stretchColumns="*"
                    android:visibility="gone">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textViewDelChildDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_span="3"
                            android:text="Details"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />


                        <TextView
                            android:id="@+id/textViewDelChild1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_span="2"
                            android:text="1st Child"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />


                        <TextView
                            android:id="@+id/textViewDelChild2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_span="2"
                            android:text="2nd Child"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp"
                            android:visibility="visible" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/textViewDelChildBWeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_span="3"
                            android:text="Birth Weight:"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />

                        <EditText
                            android:id="@+id/editTextDelChildBWeight1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="2"
                            android:digits="0123456789."
                            android:ems="10"
                            android:gravity="center"
                            android:hint="kgs."
                            android:inputType="number"
                            android:maxLength="6"
                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/editTextDelChildBWeight2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_span="2"
