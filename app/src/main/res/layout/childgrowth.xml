<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameChildGrowth"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/TableChildGrowth"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="60dp"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/textViewHeadingCG"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_span="6"
                    android:text="Child Growth Details"
                    android:textColor="@color/skyblue"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/textViewChildOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_span="3"
                    android:textColor="@color/skyblue"
                    android:textSize="25dp"
                    android:text="Order of Birth"
                    />

                <EditText
                    android:id="@+id/editTextChildOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_span="3"
                    android:ems="10"
                    android:hint="Order of Birth"
                    android:maxLength="50"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:singleLine="true"
                    />
            </TableRow>

            <TableRow
                android:id="@+id/rowChildHeight"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textViewChildHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_span="3"
                    android:text="Height"
                    android:textColor="@color/skyblue"
                    android:textSize="25dp" />


                <EditText
                    android:id="@+id/editTextChildHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_span="3"
                    android:ems="10"
                    android:hint="in Cms."
                    android:maxLength="6"
                    android:digits="0123456789."
                    android:inputType="number"
                    android:singleLine="true"
                    />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:id="@+id/textViewChildWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_span="3"
                    android:text="Weight"
                    android:textColor="@color/skyblue"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/editTextChildWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_span="3"
                    android:ems="10"
                    android:hint="in Kgs."
                    android:maxLength="6"
                    android:digits="0123456789."
                    android:inputType="number"
                    android:singleLine="true"
                    />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                >

                <Button
                    android:id="@+id/buttonBackChildG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/skyblue"
                    android:layout_margin="5dp"
                    android:onClick="clickOnBack"
                    android:text="BACK"
                    android:textColor="@color/white"

                    />

                <Button
                    android:id="@+id/buttonClearChildG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/skyblue"
                    android:onClick="clearChildGrowth"
                    android:text="CLEAR"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    />

                <Button
                    android:id="@+id/buttonNextChildG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@color/skyblue"
                    android:onClick="checkChildGrowth"
                    android:text="SAVE"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    />

            </TableRow>

        </TableLayout>

    </ScrollView>

</FrameLayout>