<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Contact Us:"
        android:textSize="20sp"
        android:textStyle="bold"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/skyblue"
        android:layout_gravity="center"
        />


    <ImageView
        android:id="@+id/imageContactus"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="49dp"
        app:srcCompat="@drawable/suhamlogo"
      />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444"
        android:layout_marginBottom="5sp"></TableRow>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Phone Details:"
    android:textStyle="bold"
    style="@style/Base.TextAppearance.AppCompat.Headline"
    android:textColor="@color/skyblue"
    android:drawableLeft="@drawable/phone_sky_blue"
    android:layout_gravity="center"
    />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contact"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"></TableRow>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/skyblue"
        android:drawableLeft="@drawable/email_sky_blue"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#444"
        android:layout_marginBottom="5sp"
        android:layout_marginTop="5sp"></TableRow>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textStyle="bold"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/skyblue"
        android:drawableLeft="@drawable/address_sky_blue"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:layout_gravity="center"
        android:gravity="center"/>


</LinearLayout>
</ScrollView>